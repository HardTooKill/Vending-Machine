@model IEnumerable<VendingMachine.ViewModels.CanViewModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedPayment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.RadioButtonFor(m => item.SelectedPayment, "CreditCard", new { Name = item.name, id = item.name }) Credit Card
                @Html.RadioButtonFor(m => item.SelectedPayment, "Cash", new { Name = item.name, id = item.name }) Cash
            </td>
            <td>
                @Html.ActionLink("Vend", "Vend","Home", new { name = item.name, selectedPayment = item.SelectedPayment },null) 

            </td>
        </tr>
    }

</table>
